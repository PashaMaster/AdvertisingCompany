@model AdvertisingCompany.Models.Location

@{
    Layout = "_Layout";
    ViewData["Title"] = "Локации - добавление";
}

<h2>Создание новой записи</h2>

<h4>Локации</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameLocation" class="control-label"></label>
                <input asp-for="NameLocation" class="form-control" />
                <span asp-validation-for="NameLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationT" class="control-label"></label>
                <input asp-for="LocationT" class="form-control" />
                <span asp-validation-for="LocationT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeAdvertising.NameTypeAdvertising" class="control-label"></label>
                <select asp-for="TypeAdvertisingID" class ="form-control" asp-items="ViewBag.TypeAdvertisingID"></select>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalServise.NameAdditionalServise" class="control-label"></label>
                <select asp-for="AdditionalServiseID" class ="form-control" asp-items="ViewBag.AdditionalServiseID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
