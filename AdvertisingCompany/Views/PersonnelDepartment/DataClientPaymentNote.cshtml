@using AdvertisingCompany.Models
@model IndexViewModel
@{
    ViewData["Title"] = "Данные о выполненых заказах";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Данные о выполненых заказах</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Имя клиента
            </th>
            <th>
                Стоимость заказа
            </th>
            <th>
                Отметка об выполнении
            </th>              
            <th>
                Отвечающий сотрудник
            </th>
            <th>
                Телефон сотрудника
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.NameClient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentNote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResponsibleOfficers.NameResponsibleOfficer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResponsibleOfficers.PhoneNumber)
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-action="DataClientPaymentNote"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       class="btn btn-default btn">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}
@if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="DataClientPaymentNote"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       class="btn btn-default btn">
        Вперед
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}

