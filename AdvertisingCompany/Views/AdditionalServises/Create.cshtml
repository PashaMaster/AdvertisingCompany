@model AdvertisingCompany.Models.AdditionalServise

@{
        Layout = "_Layout";
        ViewData["Title"] = "Дополнительный сервис - создание";
}

<h2>Создание новой записи</h2>

<h4>Дополнительный сервис</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameAdditionalServise" class="control-label"></label>
                <input asp-for="NameAdditionalServise" class="form-control" />
                <span asp-validation-for="NameAdditionalServise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscriptionAdditionalServise" class="control-label"></label>
                <input asp-for="DiscriptionAdditionalServise" class="form-control" />
                <span asp-validation-for="DiscriptionAdditionalServise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
