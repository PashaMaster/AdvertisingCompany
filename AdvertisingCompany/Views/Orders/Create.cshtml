@model AdvertisingCompany.Models.Order

@{
    Layout = "_Layout";
    ViewData["Title"] = "Заказы - добавление";
}

<h2>Создание новой записи</h2>

<h4>Заказы</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBegin" class="control-label"></label>
                <input asp-for="DateOfBegin" class="form-control" />
                <span asp-validation-for="DateOfBegin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfEnd" class="control-label"></label>
                <input asp-for="DateOfEnd" class="form-control" />
                <span asp-validation-for="DateOfEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.NameClient" class="control-label"></label>
                <select asp-for="ClientID" class ="form-control" asp-items="ViewBag.ClientID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Location.NameLocation" class="control-label"></label>
                <select asp-for="LocationID" class ="form-control" asp-items="ViewBag.LocationID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Servise" class="control-label"></label>
                <input asp-for="Servise" class="form-control" />
                <span asp-validation-for="Servise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentNote" class="control-label"></label>
                <input asp-for="PaymentNote" class="form-control" />
                <span asp-validation-for="PaymentNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResponsibleOfficers.NameResponsibleOfficer" class="control-label"></label>
                <select asp-for="ResponsibleOfficerID" class ="form-control" asp-items="ViewBag.ResponsibleOfficerID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
